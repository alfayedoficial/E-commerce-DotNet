@model IEnumerable<E_Commerce.Models.Slider>

@if (Model.Any())
{


    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (var i = 0; i < Model.Count(); i++)
            {
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Slide 1"></button>
            }
        </div>
        <div class="carousel-inner">



            @foreach (var slider in Model.Select((value, index) => new { value, index }))
            {
                <div class="carousel-item @(slider.index == 0 ? "active" : "")" data-bs-interval="4000">
                    <img class="d-block w-100" src="@slider.value.Product.ImageUrl" alt="@slider.value.Product.Name">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@slider.value.Product.Name</h5>
                        <p>@slider.value.Product.Description</p>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

}


<style>
    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }
</style>

